<div class="row sign-in">
  <form class="col s12" action="/users/sign_in" accept-charset="UTF-8" method="post">
    <input name="utf8" type="hidden" value="âœ“">
    <input type="hidden" name="authenticity_token" value="#{@token}">

    <div class="row">
      <div class="input-field col s12">
        <input id="email" type="email" class="validate" value name="user[email]">
        <label for="email" data-error="wrong" data-success="right">Email</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <input id="password" type="password" class="validate" name="user[password]">
        <label for="password">Password</label>
      </div>
    </div>

    <!-- Switch -->
    <label for="remember_me">Remember me</label>
    <div class="section">
    <div class="switch">
      <label>
        Off
        <input name="user[remember_me]" type="hidden" value="0" />
        <input type="checkbox" value="1" name="user[remember_me]">
        <span class="lever"></span>
        On
      </label>
    </div>
    </div>

    <button class="btn waves-effect waves-light normal-btn" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
